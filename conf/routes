# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# todo routes
GET     /todo/$path<(.*\.html)?>    controllers.TodoController.index(path)

# todo api routes
GET    /api/todo/lists              controllers.TodoApiController.getLists
GET    /api/todo/lists/:listId      controllers.TodoApiController.getList(listId)
POST   /api/todo/lists              controllers.TodoApiController.addList()
PUT    /api/todo/lists              controllers.TodoApiController.updateList()
DELETE /api/todo/lists/:listId      controllers.TodoApiController.removeList(listId)

# Map static resources from the /public folder to the /assets URL path
GET     /todo/*file                 controllers.Assets.at(path = "/public/todo", file)
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
